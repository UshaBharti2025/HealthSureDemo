<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.infinite.jsf.provider.model">
    
    <!-- Named Query to fetch all doctors -->  
    

    <class name="Doctors" table="doctors">

        <!-- Primary key -->
        <id name="doctorId" column="doctor_id" type="string">
            <generator class="assigned"/>
        </id>

        <!-- Foreign key to Provider -->
        <many-to-one name="providers" class="com.infinite.jsf.provider.model.Provider" column="provider_id" not-null="true" fetch="join"/>

        <!-- Doctor details -->
        <property name="doctorName" column="doctor_name" type="string" not-null="true"/>
        <property name="qualification" column="qualification" type="string" not-null="true"/>
        <property name="specialization" column="specialization" type="string" not-null="true"/>
        <property name="licenseNo" column="license_no" type="string" not-null="true"/>
        <property name="email" column="email" type="string"/>
        <property name="address" column="address" type="string"/>
        
        <property name="phoneNumber" column="phone_number" type="java.lang.String" />

        <!-- Gender (ENUM) -->
        <property name="gender" not-null="false">
            <column name="gender"/>
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">com.infinite.jsf.provider.model.Gender</param>
                <param name="useNamed">true</param>
            </type>
        </property>

        <!-- Doctor Type (ENUM) -->
        <property name="type" not-null="false">
            <column name="type"/>
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">com.infinite.jsf.provider.model.DoctorType</param>
                <param name="useNamed">true</param>
            </type>
        </property>

        <!-- Doctor Status (ENUM) -->
        <property name="status" not-null="true">
            <column name="status"/>
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">com.infinite.jsf.provider.model.DoctorStatus</param>
                <param name="useNamed">true</param>
            </type>
        </property>

	<query name="showDoctor">
        <![CDATA[FROM Doctors]]>
     
    </query>
    <query name="searchDoctor">
    <![CDATA[FROM Doctors WHERE doctorId = :doctor_Id]]>
</query>
    
    </class>

</hibernate-mapping>
